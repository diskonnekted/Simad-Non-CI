<svg xmlns="http://www.w3.org/2000/svg" width="512" height="512" viewBox="0 0 512 512">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#007bff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0056b3;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="4" dy="4" stdDeviation="6" flood-color="rgba(0,0,0,0.3)"/>
    </filter>
    <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/> 
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background with rounded corners -->
  <rect width="512" height="512" rx="100" ry="100" fill="url(#grad1)"/>
  
  <!-- Main content area -->
  <g transform="translate(86,86)">
    <!-- Building/Village Complex -->
    <g filter="url(#shadow)">
      <!-- Main building -->
      <rect x="50" y="140" width="85" height="120" fill="white" opacity="0.95" rx="4"/>
      <!-- Second building -->
      <rect x="170" y="110" width="85" height="150" fill="white" opacity="0.95" rx="4"/>
      <!-- Third building -->
      <rect x="290" y="130" width="50" height="130" fill="white" opacity="0.95" rx="4"/>
    </g>
    
    <!-- Roof structures -->
    <g filter="url(#shadow)">
      <polygon points="50,140 92.5,75 135,140" fill="white"/>
      <polygon points="170,110 212.5,45 255,110" fill="white"/>
      <polygon points="290,130 315,85 340,130" fill="white"/>
    </g>
    
    <!-- Windows grid for main building -->
    <g>
      <rect x="65" y="170" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="100" y="170" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="65" y="200" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="100" y="200" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="65" y="230" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="100" y="230" width="15" height="15" fill="#007bff" rx="2"/>
    </g>
    
    <!-- Windows for second building -->
    <g>
      <rect x="185" y="140" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="220" y="140" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="185" y="170" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="220" y="170" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="185" y="200" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="220" y="200" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="185" y="230" width="15" height="15" fill="#007bff" rx="2"/>
      <rect x="220" y="230" width="15" height="15" fill="#007bff" rx="2"/>
    </g>
    
    <!-- Windows for third building -->
    <g>
      <rect x="300" y="160" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="320" y="160" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="300" y="180" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="320" y="180" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="300" y="200" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="320" y="200" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="300" y="220" width="10" height="10" fill="#007bff" rx="1"/>
      <rect x="320" y="220" width="10" height="10" fill="#007bff" rx="1"/>
    </g>
    
    <!-- Main entrance door -->
    <rect x="82" y="230" width="30" height="30" fill="#007bff" rx="3"/>
    <circle cx="105" cy="245" r="2" fill="white"/>
    
    <!-- Decorative elements -->
    <rect x="0" y="260" width="340" height="8" fill="white" opacity="0.3" rx="4"/>
    
    <!-- SIMAD Text with enhanced typography -->
    <g filter="url(#glow)">
      <text x="170" y="310" font-family="Arial, sans-serif" font-size="42" font-weight="bold" fill="white" text-anchor="middle">SIMAD</text>
    </g>
    <text x="170" y="335" font-family="Arial, sans-serif" font-size="18" fill="white" text-anchor="middle" opacity="0.9">Sistem Informasi Manajemen</text>
    <text x="170" y="355" font-family="Arial, sans-serif" font-size="18" fill="white" text-anchor="middle" opacity="0.9">Administrasi Desa</text>
  </g>
</svg>